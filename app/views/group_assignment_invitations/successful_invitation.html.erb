    <% if @group_assignment.deadline %>
      <% if @group_assignment.deadline.passed? %>
        Deadline passed
      <% else %>

      <div class="f5 rounded-1 lh-default text-gray d-flex">
        <span class="ml-1 pb-1 pr-3"><%= octicon "calendar" %></span>
        <div class="d-block-inline">
          Your assignment is due by <span class="text-bold text-gray-dark"><%= render partial: "shared/due_date_with_local_time", locals: { deadline: @group_assignment.deadline.deadline_at } %></span>
        </div>
      </div>

      <% end %>
    <% end %>
